@model PequiTec.Models.Noticia

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Criar Noticia";
}

<div class="well">
    @using (Html.BeginForm("Create", "Noticia", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div>
                @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-default" })
            </div>
            <h2 class="text-center">Criar Nova Noticia</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "col-md-10 col-md-offset-1" })
                <div class="col-md-10 col-md-offset-1">
                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "TituloNoticia" } })
                    @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-md-10 col-md-offset-1" })
                <div class="col-md-10  col-md-offset-1">
                    @Html.TextAreaFor(model => model.Descricao, new { @class = "discucaoNoticia" })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-10 col-md-offset-1">Imagem</label>
                <div class="col-md-10  col-md-offset-1">
                    <div class="container">
                        <div class="col-md-6">
                            <div id="MensagemErro"></div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-btn">
                                        <span class="btn btn-default btn-file">
                                            Buscar… <input type="file" name="arquivo" id="imgInp" class="btn btn-default btn-file" />
                                        </span>
                                    </span>
                                    <input type="text" class="form-control" readonly placeholder="Arraste a imagem para cima do botao ou click para buscar">
                                </div>
                                <img id='img-upload' class="HideImg" />
                            </div>
                        </div>
                    </div>

                    @Html.ValidationMessageFor(model => model.Anexo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-10 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-primary" id="desabilitarBTN" />
                </div>
            </div>
        </div>
    }
</div>