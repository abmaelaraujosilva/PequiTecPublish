@using Microsoft.AspNet.Identity
<header class="main-header">
    @* BEGIN Logo *@
    <a href="@Url.Action("Index", "Home")" class="logo">
        @* Mini logo for sidebar 50x50 pixels *@
        <span class="logo-mini">
            <img src="/Content/img/PEQUITEC1.fw.png" style=" width: 45px; height: 39px;" />
        </span>
        @* Logo for regular state and mobile devices *@
        <span class="logo-lg"><img src="~/Content/img/PEQUITEC3.fw.png" width="170" height="50" /></span>
    </a>
    @* END Logo *@
    @* BEGIN Header *@
    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                @* BEGIN User Account Menu *@
                <li>
                    <a href="#" id="font-menu2">Olá @User.Identity.GetUserName()!</a>
                </li>
                <li>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                    }
                    <a href="javascript:document.getElementById('logoutForm').submit()" id="font-menu2">Sair</a>
                </li>
                @* END User Account Menu *@
            </ul>
        </div>
    </nav>
</header>